<% status = partner_row.status%>
<tr>
  <td><%= link_to partner_row.name, partner_path(partner_row) %></td>
  <td><%= link_to partner_row.email, "mailto:#{partner_row.email}" %></td>
  <td>
    <%= partner_row.status.humanize %>
  </td>
  <!-- <td><%== (rand < 0.7) ? '<span class="label label-success">Approved</span>' :
  '<span class="label label-warning">In Progress</span>' %></td> -->
  <td>
    <%= invite_button_to(invite_partner_path(partner_row), confirm: "Send an invitation to #{partner_row.name}?") unless partner_row.approved? %>
    <% case status %>
    <% when "pending" %>
      <%= link_to "Review Application", approve_partner_partner_path(partner_row), class: "btn btn-xs bg-olive" %>
    <% when "awaiting_review" %>
      <%= link_to "Review Application", approve_partner_partner_path(partner_row), class: "btn btn-xs bg-olive" %>
    <% when "approved" %>
      <%= button_to "Request Recertification", recertify_partner_partner_path(partner_row), data: { confirm: "Recertify partner #{partner_row.name}?"}, class: "btn btn-xs bg-red" %>
    <% end %>
  </td>
</tr>
